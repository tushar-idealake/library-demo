{
    "$schema": "../../../node_modules/@angular-devkit/schematics/collection-schema.json",
    "schematics": {
        "ng-add" : {
            "description": "Add reusable UI library to project",
            "factory": "./ng-add/index#ngAdd"
        },
        "login-form-component": {
            "description": "This schematic generates basic form component",
            "factory": "./login-form-component/index#LoginFormComponentGenerator",
            "schema": "./login-form-component/schema.json",
            "aliases": [
                "login-form"
            ]
        },
        "add-loader": {
            "description": "This schematic adds custom animation generic spinner in app.component.html",
            "factory": "./login-form-component/index#addLoader",
            "schema": "./login-form-component/loader-schema.json",
            "aliases": [
                "generic-spinner"
            ]
        }
    }
}